# Server Configuration
PORT=3000
NODE_ENV=development

# Logger Configuration
LOG_LEVEL=info        # Default log level (error, warn, info, http, query, debug)
DEBUG_MODE=false      # Enable debug mode and debug-level logging
SILENT=false         # Disable all logging when true

# Logger Display Options
LOG_TIMESTAMPS=true   # Include timestamps in log messages
PRETTY_LOGGING=true   # Use pretty printing for logs (false for JSON format)

# Logger Type Controls
LOG_ERRORS=true       # Enable error logging
LOG_REQUESTS=true     # Enable HTTP request logging
LOG_QUERIES=true      # Enable database query logging

# Rate Limiting Configuration
API_RATE_LIMIT_WINDOW_MS=900000    # 15 minutes in milliseconds
API_RATE_LIMIT_MAX=100             # Maximum API requests per window
AUTH_RATE_LIMIT_WINDOW_MS=900000   # 15 minutes in milliseconds
AUTH_RATE_LIMIT_MAX=5              # Maximum auth attempts per window
GENERAL_RATE_LIMIT_WINDOW_MS=60000 # 1 minute in milliseconds
GENERAL_RATE_LIMIT_MAX=30          # Maximum general requests per minute

# Add your environment variables here
# DATABASE_URL=
# JWT_SECRET=
